{
  "name": "blog-frontend",
  "version": "1.0.0",
  "description": "Blog application frontend",
  "main": "src/app/app.js",
  "scripts": {
    "start": "live-server --port=3000 --host=localhost --entry-file=index.html",
    "build": "npm run build:css && npm run minify",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css --watch",
    "minify": "uglifyjs src/app/**/*.js -o dist/app.min.js",
    "dev": "concurrently \"npm run build:css\" \"npm start\"",
    "test": "karma start",
    "lint": "eslint src/app/**/*.js"
  },
  "dependencies": {
    "angular": "^1.6.10",
    "angular-material": "^0.8.0",
    "angular-messages": "^1.8.2",
    "angular-route": "^1.8.2",
    "angular-sanitize": "^1.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^7.6.0",
    "eslint": "^8.31.0",
    "live-server": "^1.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "uglify-js": "^3.17.4"
  },
  "keywords": [
    "blog",
    "angularjs",
    "material-design",
    "tailwind"
  ],
  "author": "samuel",
  "license": "MIT"
}
